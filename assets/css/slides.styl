  z-index:0
#frame 
	position:absolute
	z-index:0
	width:739px
	height:341px
	top:-3px
	left:-70px


#example 
	width:600px
	height:350px
	position:relative


/*
	Slideshow style
*/

#slides
	position:absolute
	top:5px
	left:4px
	z-index:100

/*
	Slides container
	Important:
	Set the width of your slides container
	If height not specified height will be set by the slide content
	Set to display none, prevents content flash
*/

.slides_container 
	width:570px
	height:270px
	overflow:hidden
	position:relative
	display:none

/*
	Each slide
	Important:
	Set the width of your slides
	Offeset for the 20px of padding
	If height not specified height will be set by the slide content
	Set to display block
*/

#slides .slide 
	width:570px
	height:270px
	display:block


/*
	Next/prev buttons
*/
#slides .next,#slides .prev 
	position:absolute
	top:107px
	left:-39px
	width:24px
	height:43px
	display:block
	z-index:101


#slides .next 
	left:585px


/*
	Pagination
*/

.mypagination 
	margin:26px auto 0
	width:100px


.mypagination li 
	float:left
	margin:0 1px
	list-style:none


.mypagination li a 
	display:block
	width:12px
	height:0
	padding-top:12px
	background-image:url(/images/pagination.png)
	background-position:0 0
	float:left
	overflow:hidden


.mypagination li.current a 
	background-position:0-12px


#slides .link 
	display:block
	margin-top:10px
	font-weight:800

